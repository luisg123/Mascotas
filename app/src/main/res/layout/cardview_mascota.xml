<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cvMascota"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/activity_vertical_margin"
    card_view:cardCornerRadius="@dimen/corner_radius_cardview">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/activity_horizontal_margin"
        >
        <ImageView
            android:id="@+id/imgPic"
            android:layout_width="match_parent"
            android:layout_height="@dimen/pets"
            android:layout_gravity="center"
            android:contentDescription="Pets" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_below="@id/imgPic">

            <TextView
                android:id="@+id/tvName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/pet_name"
                android:layout_marginTop="@dimen/name_pets"
                android:drawableLeft="@drawable/dog_bone_50"
                android:textSize="@dimen/size_pets_text"
                android:drawablePadding="@dimen/margin_icons"
                android:textStyle="bold"/>
        </LinearLayout>




    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/imgPic"
        android:orientation="horizontal"
        android:layout_alignParentRight="true">
            <ImageButton
                android:id="@+id/btnLike"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/dog_bone_48"
                android:contentDescription="@string/app_name"
                />
            <TextView
                android:id="@+id/tvLike"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/pet_likes"
                android:textSize="@dimen/size_pets_text"
                android:drawablePadding="@dimen/margin_icons"
                android:textStyle="bold"/>
        </LinearLayout>

    </RelativeLayout>
</android.support.v7.widget.CardView>